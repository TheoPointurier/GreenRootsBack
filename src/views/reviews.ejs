<%- include('./partials/head.ejs') %>
  <%- include('./partials/header.ejs') %>
    <script src='<%= staticPath %>/reviewScript.js'></script>
    <script src='<%= staticPath %>/searchBar.js'></script>

    <main>
      <div class="searchAddBar">

        <input type="text" class="searchInput" placeholder="Filtrer..." data-action="filterSearchBar">
      </div>
      <div class=" table_container">
        <table>
          <thead>
            <tr>
              <th>Id</th>
              <th>Avis</th>
              <th>Note</th>
              <th>Id_Utilisateur</th>
              <th>Utilisateur</th>
              <th>Email</th>
              <th>Date</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% reviews.forEach(review=> { %>
              <tr>
                <td>
                  <%= review.id %>
                </td>
                <td>
                  <%= review.content %>
                </td>
                <td>
                  <%= review.rating %>
                </td>
                <td>
                  <%= review.id_user %>
                </td>
                <td>
                  <%= review.user.firstname + ' ' + review.user.lastname %>
                </td>
                <td>
                  <%= review.user.email %>
                </td>
                <td>
                  <%= new Date(review.created_at).toLocaleDateString('fr-FR') %>
                </td>
                <td class="line-container-button">
                  <button data-action="displayEditReviewModal" data-review-id="<%= review.id %>"
                    class="button save">Modifier</button>
                  <button data-action="displayDeleteReviewModal" data-review-id="<%= review.id %>"
                    class="delete button">Supprimer</button>
                </td>
              </tr>
              <%- include('./partials/modals-updateReview.ejs', { review }) %>
                <%- include('./partials/modals-deleteReview.ejs', { review }) %>
                  <% }) %>
          </tbody>
        </table>
      </div>


    </main>
    <%- include('./partials/footer.ejs') %>